<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="REA.Views.ManageMaintenancePage"
             Title="Manage Maintenance Plans">
    <VerticalStackLayout Padding="20" Spacing="30">
        <VerticalStackLayout Spacing="10">
            <Label Text="Scheduled Maintenance"/>
            <ListView x:Name="MaintenanceListView" SelectionMode="Single" ItemSelected="OnMaintenanceSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Name}" Detail="{Binding Type}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>