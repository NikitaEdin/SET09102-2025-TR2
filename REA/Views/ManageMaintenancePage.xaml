<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:REA.ViewModels"
             x:Class="REA.Views.ManageMaintenancePage"
             Title="Manage Maintenance Plans">
    <ContentPage.BindingContext>
        <viewModels:ManageMaintenanceViewModel x:Name="ViewModel" />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="20" Spacing="30">
        <VerticalStackLayout Spacing="10">
            <Button Text="Schedule Maintenance" Command="{Binding NavigateToCreateMaintenanceCommand}"/>

            <Label Text="Scheduled Maintenance" />

            <ListView x:Name="MaintenanceListView" SelectionMode="Single" ItemSelected="OnMaintenanceSelected"
                      ItemsSource="{Binding MaintenanceList}"
                      MinimumHeightRequest="400">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Name}" Detail="{Binding Type}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>