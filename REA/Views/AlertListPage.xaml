<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:REA.ViewModels"
             x:Class="REA.Views.AlertListPage"
             Title="Alert List Page">
    <ContentPage.BindingContext>
        <viewModels:AlertListViewModel x:Name="ViewModel"/>
    </ContentPage.BindingContext>

    <VerticalStackLayout Spacing="10" Padding="10">
        <Label Text="Alert List"/>

        <ListView x:Name="AlertListView"
                  SelectionMode="Single"
                  VerticalOptions="FillAndExpand"
                  ItemSelected="OnAlertSelected"
                  ItemsSource="{Binding Alerts}"
                  MinimumHeightRequest="400"
                  >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Message}" Detail="{Binding TriggeredAt}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>