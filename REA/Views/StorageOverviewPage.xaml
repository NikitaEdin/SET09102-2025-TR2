<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="REA.Views.StorageOverviewPage"
             Title="StorageOverviewPage">

    <VerticalStackLayout Padding="20" Spacing="25">
        <!-- Title -->
        <Label Text="Storage Overview" FontSize="24" FontAttributes="Bold" />
        <Label Text="Current Storage Usage" FontSize="18" FontAttributes="Bold" />
        <!-- Current Storage Usage -->
        <HorizontalStackLayout Spacing="20" HorizontalOptions="Center" >
            <Label Text="Total: 128 GB" FontSize="14" />
            <Label Text="Used: 96 GB" FontSize="14" />
            <Label Text="Free: 32 GB" FontSize="14" />
        </HorizontalStackLayout>
        
        <!-- Storage Back Up -->
        <Label Text="Storage Back Ups" FontSize="18" FontAttributes="Bold" />
        <Label FontSize="14">
            <Label.FormattedText>
                <FormattedString>
                    <Span Text="- Last Back Up:" FontAttributes="Bold" />
                    <Span Text=" 05/04/2025" />
                </FormattedString>
            </Label.FormattedText>
        </Label>
        <Label FontSize="14">
            <Label.FormattedText>
                <FormattedString>
                    <Span Text="- Back Up Size:" FontAttributes="Bold" />
                    <Span Text=" 32GB" />
                </FormattedString>
            </Label.FormattedText>
        </Label>
        <Label FontSize="14">
            <Label.FormattedText>
                <FormattedString>
                    <Span Text="- Next Scheduled Back Up:" FontAttributes="Bold" />
                    <Span Text=" 05/05/2025" />
                </FormattedString>
            </Label.FormattedText>
        </Label>

        <!-- Buttons -->
        <Button Text="Back Up Storage Now" Margin="10" />
        <Button Text="View Last Back Up" Margin="10" />

    </VerticalStackLayout>
</ContentPage>