<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:REA.ViewModels"
             x:Class="REA.Views.AlertDetailsPage"
             Title="Alert Details">
    <ContentPage.BindingContext>
        <viewModels:AlertDetailsViewModel x:Name="ViewModel" />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="20" Spacing="30">
        <VerticalStackLayout Spacing="10">
            <Label Text="{Binding Message, StringFormat='Message: {0}'}" />
            <Label Text="{Binding Metadata, StringFormat='Metadata ID: {0}'}" />
            <Label Text="{Binding TriggeredAt, StringFormat='Triggered At: {0}'}" />
        </VerticalStackLayout>

        <Button Text="Back to List" Command="{Binding BackCommand}" />
    </VerticalStackLayout>
</ContentPage>