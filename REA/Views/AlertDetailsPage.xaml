<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:REA.ViewModels"
             x:Class="REA.Views.AlertDetailsPage"
             Title="Alert Details">
    <ContentPage.BindingContext>
        <viewModels:AlertDetailsViewModel x:Name="ViewModel" />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="20" Spacing="30">
        <VerticalStackLayout Spacing="10">
            <Label Text="Message" FontAttributes="Bold"/>
            <Label Text="{Binding Message}" />

            <Label Text="Metadata ID" FontAttributes="Bold"/>
            <Label Text="{Binding Metadata}" />

            <Label Text="Triggered At" FontAttributes="Bold"/>
            <Label Text="{Binding TriggeredAt}" />
        </VerticalStackLayout>

        <Button Text="Back to List" Command="{Binding BackCommand}" />
    </VerticalStackLayout>
</ContentPage>