<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:REA.ViewModels"
             x:Class="REA.Views.MaintenanceDetailPage"
             Title="{Binding Name}"
             >
    <ContentPage.BindingContext>
        <viewModels:MaintenanceDetailsViewModel x:Name="ViewModel"/>
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="{Binding Name, StringFormat='Name: {0}'}"/>
        <Label Text="{Binding ScheduledAt, StringFormat='Scheduled: {0:MMMM dd, yyyy}'}"/>
        <Label Text="{Binding Type, StringFormat='Type: {0}'}"/>
        <Label Text="{Binding AssignedUser, StringFormat='Conducted by: {0}'}"/>

        <Button Text="Back" Command="{Binding BackCommand}"/>
    </VerticalStackLayout>
</ContentPage>