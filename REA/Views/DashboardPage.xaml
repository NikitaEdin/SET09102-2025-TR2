<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="REA.Views.DashboardPage"
             xmlns:viewModels="clr-namespace:REA.ViewModels"
             Title="Dashboard Page">

    <ContentPage.BindingContext>
        <viewModels:DashboardViewModel/>
    </ContentPage.BindingContext>

    <StackLayout Padding="30">
        <Label Text="Welcome" FontSize="24" />
        <Label Text="{Binding CurrentUser.Username}" FontSize="18" Margin="10" />


        <Button Text="Administrator" Command="{Binding NavigateToAdminCommand}" Margin="10" />
        <Button Text="Environmental Scientist" Command="{Binding NavigateToEnvironmentalCommand}" Margin="10" />
        <Button Text="Operations Manager" Command="{Binding NavigateToOperationsCommand}" Margin="10" />
    </StackLayout>
    
</ContentPage>